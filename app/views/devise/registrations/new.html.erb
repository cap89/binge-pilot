<div class="container">
  <div class="headline-container">
    <h1 class="headline">Let's get started with a simple sign-up.</h1>
  </div>

  <div data-controller="form-reveal">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

    <div class="form-style">
      <div class="form-inputs">
        <%= f.input :first_name,
                    label: "Let's start with your name.",
                    required: true,
                    autofocus: true,
                    wrapper_html: { class: "not-active active", "data-form-reveal-target": "input" },
                    input_html: { autocomplete: "first_name" } %>

        <%= f.input :email,
                    label: "Now, your email?",
                    required: true,
                    autofocus: true,
                    wrapper_html: { class: "not-active", "data-form-reveal-target": "input" },
                    input_html: {
                      autocomplete: "email",
                      pattern: '[^@\\s]+@[^@\\s]+\\.[^@\\s]+'
                    } %>


        <%= f.input :password,
                    label: "Finally, a password.",
                    required: true,
                    wrapper_html: { class: "not-active", "data-form-reveal-target": "input" },
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>

        <%= f.input :password_confirmation,
                    label: "Please confirm your password.",
                    required: true,
                    wrapper_html: { class: "not-active", "data-form-reveal-target": "input" },
                    input_html: { autocomplete: "new-password" } %>


</div>
</div>
        <div class="row justify-content-between">
          <div class="col-6">
            <button class="button-signup-element d-none" data-form-reveal-target="back" data-action="click->form-reveal#showPrevious">back</button>
          </div>
          <div class="col-6">
            <button class="button-signup-element" data-form-reveal-target="next" data-action="click->form-reveal#showNext">next</button>
          </div>
        </div>
        <%= f.button :submit, "Sign up", class: "button-signup d-none", data: {form_reveal_target: "submit"} %>
      <div class="form-actions">

      </div>

    </div>
  <% end %>
  </div>
</div>

  <%= render "devise/shared/links" %>
</div>
</div>
