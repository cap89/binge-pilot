<div class="container">
  <div class="headline-container">
    <h1 class="headline">Pick your vibe...</h1>
  </div>

  <div class="icons-container">
    <% ['happy', 'dramatic', 'thrilling', 'random'].each do |mood| %>
      <%= link_to bookmarks_path(movies: params[:movies], mood: mood) do %>
        <div class="mood-item">
          <%= image_tag("#{mood}.svg", alt: "#{mood.capitalize}", class: "mood-icon") %>
          <div class="subline"><%= mood.capitalize %></div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
