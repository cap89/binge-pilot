<div class="container">
<div class="content-container">
<div class="content-wrapper">
<div class="poster-container">
  <img src="https://image.tmdb.org/t/p/w500<%= @random_result['poster_path'] %>" alt="<%= @random_result['title'] %> poster">
</div>

      <div id="content-title"> <%= @random_result["original_title"] %></div>
<div id="released">Released in <%= @random_result["release_date"].slice(0, 4) %></div>
</div>
</div>
<%# <% <p><%= @random_result["overview"] %>

<div id="bookmark-buttons">
        <%= link_to create_bookmark_path(liked: false, result: @random_result), id: "discard", class: "bookmark-button" do %>
          <%= image_tag "dislike.svg", alt: "Discard", class: "interaction-icon"%>
        <% end %>
        <%= link_to "#", id: "watch-now", class: "bookmark-button" do %>
          <%= image_tag "watch.svg", alt: "Watch Now", class: "interaction-icon"%>
        <% end %>
        <%= link_to create_bookmark_path(liked: true, result: @random_result), id: "save-for-later", class: "bookmark-button" do %>
          <%= image_tag "like.svg", alt: "Save for Later", class: "interaction-icon" %>
        <% end %>
    </div>
</div>

